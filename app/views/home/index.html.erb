             animation: 'slide'
             data-options="timer:true; ,
             timer_speed: 5000,
             pause_on_hover:false;
             animation_speed:500;
             navigation_arrows:true;
             bullets:false;">


  <li>
  <img src="http://i.telegraph.co.uk/multimedia/archive/03365/charlotte-christen_3365281k.jpg" alt="slide 1" />
