<div class="front_news">
<h3>Latest News</h3>
<ul> 
  <% @recent_posts.each do |post|%>
  <li>
  <%= post.read_count %>
  <%= link_to(post) do %>
    <%= post.title%>: <%= post.date.to_formatted_s(:short)%>: <%= post.user.first_name%>
  <% end %>
  </li>
  <% end %>
</ul>
</ul>
</div>

  

