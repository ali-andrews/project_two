<p id="notice"><%= notice %></p>

    <% @posts.each do |post| %>
      <div class="latest-container">
      <span> <%= image_tag post.photo.url, width:"280", height: "200", style: "float: left; padding: 20px" %></span>
      <h3><%= link_to post.title, post %></h3>

        <p><strong><%= post.date.to_formatted_s(:short) %>, <%= post.location %></strong></p>
        <p><%= link_to post.body.lines.take(1).join, post %></p> 
        <p><%= post.user.first_name %> <%= post.user.last_name %>

        <% if current_user == post.user %> 
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %></p> 
      </div>
    <% end %>

<br>


