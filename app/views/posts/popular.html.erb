<p id="notice"><%= notice %></p>

<h1>Top Posts Today</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th width="50%">Body</th>
      <th>User</th>
      <th>Read Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      <td> <%= image_tag post.photo.url %></td>
      <td><%= link_to post.title, post %></td>
        <td><%= post.date %></td>
        <td><%= post.location %></td>
        <td><%= link_to post.body.lines.take(2).join, post %></td> 
        <td><%= post.user.first_name %> <%= post.user.last_name %></td>
        <td><%= post.read_count %></td>

        <% if current_user == post.user %> 
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>


